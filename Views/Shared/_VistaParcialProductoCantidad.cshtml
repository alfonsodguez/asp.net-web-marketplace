@model Producto
<tr>
    <th scope="row">@Model.EAN</th>
    <td>@Model.Nombre</td>
    <td><a href="https://localhost:44329/Tienda/MostrarProducto/@Model.EAN" class="btn btn-outline-danger btn-sm">Detalle del producto</a></td>
    <td><p>@Model.Precio</p> <p>1 LITRO/KG: @Model.PrecioUnidad</p></td>
    <td>
        <button type="button" class="btn btn-success btn-sm" id="btnMenos-@Model.EAN">-</button>
        <label id="EAN-@Model.EAN">1</label>
        <button type="button" class="btn btn-success btn-sm" id="btnMas-@Model.EAN">+</button>
    </td>
    <td><a href="#" class="btn btn-btn-light btn-sm" id="btnComprar-@Model.EAN"><img src="~/images/boton_AddCestaProducto.png"></a>Comprar</td>
</tr>

